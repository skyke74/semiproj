<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.hotels.api01.model.DeptDao">
  	<select id="pullList" resultType="com.hotels.api01.model.DeptVo">
  		SELECT * FROM DEPT ORDER BY DEPTNO
  	</select>
  	<select id="getList" parameterType="int" resultType="com.hotels.api01.model.DeptVo">
  		SELECT * FROM DEPT WHERE DEPTNO=#{int}
  	</select>
  	<update id="addList" parameterType="com.hotels.api01.model.DeptVo">
  		INSERT INTO DEPT (DEPTNO,DNAME,LOC) VALUES (#{deptno},#{dname},#{loc})
  	</update>
  	<update id="setList" parameterType="com.hotels.api01.model.DeptVo">
  		UPDATE DEPT SET DNAME=#{dname},LOC=#{loc} WHERE DEPTNO=#{deptno}
  	</update>
  	<delete id="rmList" parameterType="int">
  		DELETE FROM DEPT WHERE DEPTNO=#{int}
  	</delete>
  </mapper>
  